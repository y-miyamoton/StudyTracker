<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.y_miyamoton.studytracker.repository.SubjectRepository">

    <select id="findAllActiveByUserId" resultType="com.github.y_miyamoton.studytracker.entity.SubjectEntity">
        SELECT * FROM subjects
        WHERE user_id = #{userId} AND archived = FALSE
        ORDER BY created_at DESC
    </select>
</mapper>