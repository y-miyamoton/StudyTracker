<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.y_miyamoton.studytracker.repository.TagRepository">

    <select id="findAll" resultType="com.github.y_miyamoton.studytracker.entity.TagEntity">
        SELECT * FROM tags
        WHERE user_id = #{userId}
        ORDER BY name
    </select>

    <select id="findById" resultType="com.github.y_miyamoton.studytracker.entity.TagEntity">
        SELECT * FROM tags
        WHERE id = #{id} AND user_id = #{userId}
    </select>
</mapper>